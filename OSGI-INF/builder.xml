<?xml version="1.0"?>
<scr:component name="configurator" 
               immediate="true"
			   xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0">
	<implementation class="org.protege.owl.server.configuration.BuilderImpl"/>
	<service>
		<provide interface="org.protege.owl.server.api.Builder"/>
	</service>
	<reference name="CONFIGURATION"
	    interface="org.protege.owl.server.api.ServerConfiguration"
	    bind="initialise"
	    cardinality="1..1"/>
	<reference name="FACTORY"
		interface="org.protege.owl.server.api.ServerComponentFactory"
		bind="addServerComponentFactory"
		unbind="removeServerComponentFactory"
		cardinality="0..n"
		policy="dynamic"/>
</scr:component>